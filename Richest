
def Solution(a):
    maxsum = 0
    temp = 0
    for i in range(len(a)):
        temp = sum(a[i])
        if(temp>=maxsum):
            maxsum = temp
    print(maxsum)        


m = int(input().strip())
a = []
for i in range(m):
    a.append([int(j) for j in input().split()])
result = Solution(a)    
 
